
[Unit]
Description=Mesos Cluster Manager
After=network.target
Wants=network.target

[Service]
Type=forking 
ExecStart=/usr/sbin/mesos-daemon.sh mesos-slave
ExecStop=/usr/bin/killall -s 9 mesos-slave
ExecReload=/bin/kill -HUP $MAINPID
User=mesos
Group=mesos
Restart=always
RestartSec=20
LimitNOFILE=16384

